datasource db {
    provider = "postgresql"
    url      = env("DATASOURSE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id         Int          @id @default(autoincrement())
    firstname  String
    username   String       @unique
    password   String
    role       UserRole
    AuthLogger AuthLogger[]
}

model AuthLogger {
    id     Int      @id @default(autoincrement())
    user   User     @relation(fields: [userId], references: [id])
    userId Int
    time   DateTime @default(now())
}

enum UserRole {
    ADMIN
    USER
}
